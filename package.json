{
  "name": "read-stack-extension",
  "displayName": "Read stack extension",
  "version": "0.0.1",
  "description": "An Official Browser Extension for ReadStack",
  "author": "cp20",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "lint": "eslint . --ext .ts,.tsx",
    "package": "plasmo package",
    "format": "prettier --write",
    "stylelint": "stylelint --ignore-path .gitignore './src/**/*.{jsx,tsx,css,scss}'",
    "prepare": "husky install",
    "fix": "pnpm lint --fix && pnpm stylelint --fix && pnpm format",
    "prettier": "prettier --config .prettierrc.js './**/*.{js,jsx,ts,tsx,json,md}'",
    "preinstall": "npx only-allow pnpm"
  },
  "dependencies": {
    "@emotion/react": "^11.11.1",
    "@mantine/core": "^6.0.19",
    "@mantine/hooks": "^6.0.19",
    "@plasmohq/messaging": "^0.5.0",
    "@plasmohq/storage": "^1.7.2",
    "@supabase/supabase-js": "^2.33.1",
    "@tabler/icons-react": "^2.32.0",
    "plasmo": "0.82.5",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.0",
    "@types/chrome": "0.0.245",
    "@types/node": "20.5.9",
    "@types/react": "18.2.21",
    "@types/react-dom": "18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.6.0",
    "eslint": "^8.48.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "postcss-jsx": "^0.36.4",
    "prettier": "3.0.3",
    "stylelint": "^15.10.3",
    "stylelint-config-idiomatic-order": "^9.0.0",
    "stylelint-config-recess-order": "^4.3.0",
    "stylelint-config-standard": "^34.0.0",
    "typescript": "5.2.2"
  },
  "manifest": {
    "host_permissions": [
      "https://*/*"
    ],
    "key": "$CRX_KEY",
    "permissions": [
      "tabs"
    ],
    "web_accessible_resources": [
      {
        "resources": [
          "options.html"
        ],
        "matches": [
          "<all_urls>"
        ],
        "extension_ids": [
          "$CRX_ID"
        ]
      }
    ]
  }
}
